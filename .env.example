# Database Configuration
# For local development, you can use a local PostgreSQL database
# or create a free Neon database at https://neon.tech
DATABASE_URL=postgresql://username:password@localhost:5432/fluenti_db

# OpenAI API Key
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Session Secret (generate a random string)
SESSION_SECRET=your_very_long_random_session_secret_here_at_least_32_characters

# Replit-specific variables (for local development, these can be dummy values)
REPL_ID=local-development
REPLIT_DOMAINS=localhost:5000,127.0.0.1:5000
ISSUER_URL=https://replit.com/oidc

# Application Port
PORT=5000

# Node Environment
NODE_ENV=development
