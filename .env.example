# Database Configuration
# MongoDB Connection String (currently used)
MONGODB_URI=mongodb://localhost:27017/fluenti

# OpenAI API Key
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face (Free token from huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your-hf-token

# Session Secret (generate a secure random string)
SESSION_SECRET=your_very_long_random_session_secret_here_at_least_64_characters

# Application Port
PORT=3001

# Node Environment
NODE_ENV=development
